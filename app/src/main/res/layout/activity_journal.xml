<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"

    android:padding="10dp"
    tools:context=".journal">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_journal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"

        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingClass" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Customize this layout to show the title, content, and timestamp of each journal entry -->


        <ListView
            android:id="@+id/journalListView"
            android:layout_width="362dp"
            android:layout_height="537dp"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:divider="@drawable/blue"
            android:dividerHeight="30dp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/journalButton"
        android:layout_width="69dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/clear_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ListButton"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/journal" />

    <ImageButton
        android:id="@+id/CalendarButton"
        android:layout_width="68dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/clear_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.667"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/ListButton"
        android:layout_width="70dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/clear_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/list" />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="69dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/clear_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_logout"
        tools:ignore="UnknownId" />

</androidx.constraintlayout.widget.ConstraintLayout>

